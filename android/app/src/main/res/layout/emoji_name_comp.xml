<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feeling_icon"
            android:layout_width="@dimen/smallIconSize"
            android:layout_height="@dimen/smallIconSize"
            android:contentDescription="happy icon"
            android:src="@drawable/smiley_happy" />

        <TextView
            android:id="@+id/horse_name"
            style="@style/Horse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timmy" />
    </LinearLayout>
</LinearLayout>